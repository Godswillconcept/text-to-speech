{
  "name": "tts-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Text-to-Speech application with React frontend and Node.js backend",
  "workspaces": [
    "api",
    "client"
  ],
  "scripts": {
    "start:api": "npm start --workspace=api",
    "dev:api": "npm run dev --workspace=api",
    "start:client": "npm run dev --workspace=client",
    "build:client": "npm run build --workspace=client",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,json}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Godswillconcept/text-to-speech.git"
  },
  "author": "",
  "license": "MIT"
}
